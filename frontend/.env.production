# ==========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ==========================================

# Deshabilitar source maps en producción (reduce tamaño del bundle)
GENERATE_SOURCEMAP=false

# Compresión gzip/brotli
REACT_APP_ENABLE_COMPRESSION=true

# Analytics (opcional - reemplazar con tu tracking ID)
# REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry para errores (opcional)
# REACT_APP_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Backend URL en producción
REACT_APP_BACKEND_URL=https://api.carga.es

# Modo demo (cambiar a false en producción real)
# DEMO_MODE=false
